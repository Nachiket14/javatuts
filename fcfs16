#include<stdio.h>
#include<conio.h>
void main()
{
	int i,j,n,temp=0,temp1=0,AT[10],BT[10],CT[10],TAT[10],WT[10];
	float AVGTAT,AVGWT,TTAT=0,TWT=0;
	clrscr();
	printf("Enter the number of processes:");
	scanf("%d",&n);
	printf("Enter the Arrival time of processes:");
	for(i=0;i<n;i++)
	{
		scanf("%d",&AT[i]);
	}
	printf("Enter the Bus time of processes:");
	for(i=0;i<n;i++)
	{
		scanf("%d",&BT[i]);
	}
	for(i=0;i<n;i++)
	{
		for(j=i+1;j<n;j++)
		{
		       if(AT[i]>AT[j])
		       {
				temp=AT[i];
				AT[i]=AT[j];
				AT[j]=temp;

				temp1=BT[i];
				BT[i]=BT[j];
				BT[j]=temp1;

		       }

		}
	}


	CT[0]=BT[0];
	for(i=1;i<n;i++)
	{
		CT[i]=CT[i-1]+BT[i];
	}



	for(i=0;i<n;i++)
	{
		TAT[i]=CT[i]-AT[i];
	}


	for(i=0;i<n;i++)
	{
		WT[i]=BT[i]-AT[i];
	}



	for(i=0;i<n;i++)
	{
		TTAT+=TAT[i];
		TWT+=WT[i];
	}
	AVGTAT=TTAT/n;
	AVGWT=TWT/n;
	printf("\n\n \tArrival time\t Burst time\t Completion time");
	for(i=0;i<n;i++)
	{
		printf("\n P[%d]\t\t%d\t\t%d\t\t%d",i,AT[i],BT[i],CT[i]);
	}
	printf("\nAverage turn around time is:%f",AVGTAT);
	printf("\nAverage Waiting time is:%f",AVGWT);
	getch();
}

